<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".ui.othernavcomponent.FirstFragment">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What's your name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_second_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pass Data To Second Fragment"
        app:layout_constraintTop_toBottomOf="@id/et_input"
        app:layout_constraintStart_toStartOf="@id/et_input" />

    <Button
        android:id="@+id/btn_back_to_bottom_nav_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to bottom nav activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>